{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
{{ include('header/header.html.twig') }}
    <h1 class="rouge">Liste des équipements</h1>
    <a class="btn btn-primary" href="{{ path('app_material_new') }}">Ajouter un nouveau matériel</a>
    {% if materials %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for material in materials %}
                <tr>
                    {# <td>{{ material.id }}</td> #}
                    <td>{{ material.name }}</td>
                    <td>{{ material.quantity }}</td>
                    <td>
                        {# <a href="{{ path('app_material_show', {'id': material.id}) }}">show</a> #}
                        <a href="{{ path('app_material_edit', {'id': material.id}) }}">edit</a>
                         {{ include('material/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% endif %}

    

    
{% endblock %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="">
        <button class="btn">{{ button_label|default('Save') }}</button>
        <div>
        <form method="post" action="{{ path('app_material_delete', {'id': material.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ material.id) }}">
            <button class="btn">Delete</button>
        </form>
        </div>
    </div>
    
{{ form_end(form) }}
